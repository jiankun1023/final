<h1>Sign In</h1>
<br>
<%= form_tag "/sessions", :class=>"form" do  %>
	<div class="form-group">
  			<%= label_tag :email, "Email address:" %>
  		<%= text_field_tag :email, '', :class => "form-control",autofocus: true, size: 40, required: true %>
  	</div>
	<div class="form-group">
  			<%= label_tag :password %>
  		<%= password_field_tag :password, '', :class => "form-control", size: 40, required: true %>
  </div>
  <%= submit_tag "Sign Me In!", :class => "btn btn-default" %>

<% end %>

