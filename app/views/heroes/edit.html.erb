<%= form_tag "/heroes/#{@hero.id}", :class=>"form", :method => 'patch' do %>

  <div class="form-group">
    <%= label_tag 'Name: ' %>
    <%= text_field_tag :name,  value = @hero.name, size: 50, :class => "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag 'RealName: ' %>
    <%= text_field_tag :realname, value = @hero.realname, :class => "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag 'Height: ' %>
    <%= text_field_tag :height, value = @hero.height, size: 4, :class => "form-control" %>
  </div>

 <div class="form-group">
    <%= label_tag 'Weight: ' %>
    <%= text_field_tag 'weight', value = @hero.weight, :class => "form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag 'Photo: ' %>
    <%= text_field_tag :photo_url, value = @hero.photo_url, size: 100, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'Powers: ' %>
    <%= text_area_tag :power, value = @hero.powers, rows: 5, cols: 70, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'Abilities: ' %>
    <%= text_area_tag :abilities, value = @hero.abilities, rows: 5, cols: 70 , :class => "form-control"%>
  </div>

  <%= submit_tag 'Update',:class => "btn btn-default" %>

<% end %>
